<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Escolha as disciplinas que gostou de cursar - Página 2\n Marque ao menos 3 disciplinas por página"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEscolha"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toTopOf="@+id/checkbox_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/checkbox_container"
            app:layout_constraintTop_toBottomOf="@+id/tvEscolha"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <!-- CheckBoxes para as disciplinas -->
        <CheckBox
                android:id="@+id/checkbox_projeto_frontend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROJETO FRONT-END"/>

        <CheckBox
                android:id="@+id/checkbox_estruturas_dados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ESTRUTURAS DE DADOS"/>

        <CheckBox
                android:id="@+id/checkbox_metodos_quantitativos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MÉTODOS QUANTITATIVOS"/>

        <CheckBox
                android:id="@+id/checkbox_padroes_projeto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PADRÕES E PROJETO DE SOFTWARE"/>

        <CheckBox
                android:id="@+id/checkbox_programacao_orientada_objetos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROGRAMAÇÃO ORIENTADA A OBJETOS"/>

        <CheckBox
                android:id="@+id/checkbox_projeto_backend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROJETO BACK-END"/>

        <CheckBox
                android:id="@+id/checkbox_business_intelligence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BUSINESS INTELLIGENCE"/>

        <CheckBox
                android:id="@+id/checkbox_ciencia_dados_negocios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CIÊNCIA DE DADOS NOS NEGÓCIOS"/>

        <CheckBox
                android:id="@+id/checkbox_engenharia_dados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENGENHARIA DE DADOS"/>

        <CheckBox
                android:id="@+id/checkbox_programacao_analise_dados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROGRAMAÇÃO PARA ANÁLISE DE DADOS"/>

    </LinearLayout>

    <TextView
            android:id="@+id/error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Selecione pelo menos 3 disciplinas."
            android:textColor="@android:color/holo_red_dark"
            app:layout_constraintBottom_toTopOf="@+id/btnProx"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:id="@+id/btnProx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Próxima página"
            android:layout_marginTop="144dp"
            app:layout_constraintTop_toBottomOf="@+id/checkbox_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>
