<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Escolha as disciplinas que gostou de cursar - P치gina 1\n Marque ao menos 3 disciplinas por p치gina"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEscolha"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toTopOf="@+id/checkbox_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/checkbox_container"
            app:layout_constraintTop_toBottomOf="@+id/tvEscolha"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
    <!-- CheckBoxes para as disciplinas -->
    <CheckBox
            android:id="@+id/checkbox_big_data_cloud_computing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIG DATA E CLOUD COMPUTING" />


    <CheckBox
            android:id="@+id/checkbox_projeto_cloud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROJETO DE CLOUD" />

    <CheckBox
            android:id="@+id/checkbox_sistemas_operacionais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SISTEMAS OPERACIONAIS" />

</LinearLayout>

    <Button
            android:id="@+id/btnProx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pr칩xima p치gina"
            android:layout_marginTop="144dp"
            app:layout_constraintTop_toBottomOf="@+id/checkbox_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>