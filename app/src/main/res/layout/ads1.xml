<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Escolha as disciplinas que gostou de cursar - Página 1\n Marque ao menos 3 disciplinas por página"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEscolha"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toTopOf="@+id/checkbox_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/checkbox_container"
            app:layout_constraintTop_toBottomOf="@+id/tvEscolha"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

    <!-- CheckBoxes para as disciplinas -->
    <CheckBox
            android:id="@+id/checkbox_desenvolvimento_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESENVOLVIMENTO WEB" />

    <CheckBox
            android:id="@+id/checkbox_design_grafico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESIGN GRÁFICO E USER EXPERIENCE" />

    <CheckBox
            android:id="@+id/checkbox_inovacao_design_thinking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INOVAÇÃO E DESIGN THINKING" />

    <CheckBox
            android:id="@+id/checkbox_programacao_estruturada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROGRAMAÇÃO ESTRUTURADA" />

    <CheckBox
            android:id="@+id/checkbox_projeto_front_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROJETO FRONT-END" />

    <CheckBox
            android:id="@+id/checkbox_estrutura_dados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ESTRUTURA DE DADOS" />

    <CheckBox
            android:id="@+id/checkbox_padroes_projeto_software"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PADRÕES E PROJETO DE SOFTWARE" />

    <CheckBox
            android:id="@+id/checkbox_programacao_orientada_objetos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROGRAMAÇÃO ORIENTADA A OBJETOS" />

</LinearLayout>

    <Button
            android:id="@+id/btnProx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Próxima página"
            android:layout_marginTop="144dp"
            app:layout_constraintTop_toBottomOf="@+id/checkbox_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>