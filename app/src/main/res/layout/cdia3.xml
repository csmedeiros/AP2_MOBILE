<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Escolha as disciplinas que gostou de cursar - Página 3\n Marque ao menos 3 disciplinas por página"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEscolha"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toTopOf="@+id/checkbox_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/checkbox_container"
            app:layout_constraintTop_toBottomOf="@+id/tvEscolha"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <!-- CheckBoxes para as disciplinas -->
        <CheckBox
                android:id="@+id/checkbox_projeto_bi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROJETO DE BI"/>

        <CheckBox
                android:id="@+id/checkbox_big_data_cloud_computing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BIG DATA E CLOUD COMPUTING"/>

        <CheckBox
                android:id="@+id/checkbox_extracao_preparacao_dados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXTRAÇÃO E PREPARAÇÃO DE DADOS"/>

        <CheckBox
                android:id="@+id/checkbox_modelagem_computacional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MODELAGEM COMPUTACIONAL"/>

        <CheckBox
                android:id="@+id/checkbox_projeto_cloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROJETO DE CLOUD"/>

        <CheckBox
                android:id="@+id/checkbox_seguranca_informacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEGURANÇA DA INFORMAÇÃO"/>

        <CheckBox
                android:id="@+id/checkbox_aprendizado_maquina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APRENDIZADO DE MÁQUINA"/>

        <CheckBox
                android:id="@+id/checkbox_aprendizado_reforco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APRENDIZAGEM POR REFORÇO"/>

        <CheckBox
                android:id="@+id/checkbox_inovacao_design_thinking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INOVAÇÃO E DESIGN THINKING"/>

        <CheckBox
                android:id="@+id/checkbox_processamento_linguagem_natural"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROCESSAMENTO DE LINGUAGEM NATURAL"/>

        <CheckBox
                android:id="@+id/checkbox_projeto_machine_learning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROJETO DE MACHINE LEARNING"/>

        <CheckBox
                android:id="@+id/checkbox_projeto_deep_learning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROJETO DE DEEP LEARNING"/>

        <CheckBox
                android:id="@+id/checkbox_redes_neurais_deep_learning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REDES NEURAIS E DEEP LEARNING"/>

        <CheckBox
                android:id="@+id/checkbox_visao_computacional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VISÃO COMPUTACIONAL"/>

    </LinearLayout>
    <Button
            android:id="@+id/btnProx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Próxima página"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.492" app:layout_constraintTop_toBottomOf="@+id/checkbox_container"/>

</android.support.constraint.ConstraintLayout>
