<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Escolha as disciplinas que gostou de cursar - Página 2\n Marque ao menos 3 disciplinas por página"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEscolha"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toTopOf="@+id/checkbox_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/checkbox_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEscolha"
            app:layout_constraintBottom_toTopOf="@+id/btnProx"
            android:layout_marginTop="100dp">

        <!-- CheckBoxes para as disciplinas -->

        <CheckBox
                android:id="@+id/checkbox_projeto_backend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROJETO BACK-END" />

        <CheckBox
                android:id="@+id/checkbox_eletricidade_eletromagnetismo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ELETRICIDADE E ELETROMAGNETISMO" />

        <CheckBox
                android:id="@+id/checkbox_engenharia_dados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENGENHARIA DE DADOS" />

        <CheckBox
                android:id="@+id/checkbox_principio_padroes_redes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRINCÍPIO E PADRÕES DE REDES DE COMPUTADORES" />

        <CheckBox
                android:id="@+id/checkbox_projeto_sistemas_embarcados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROJETO DE SISTEMAS EMBARCADOS" />

        <CheckBox
                android:id="@+id/checkbox_sistemas_embarcados_iot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SISTEMAS EMBARCADOS E INTERNET DAS COISAS" />

        <CheckBox
                android:id="@+id/checkbox_ligacoes_interredes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIGAÇÕES INTER-REDES" />

        <CheckBox
                android:id="@+id/checkbox_modelagem_computacional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MODELAGEM COMPUTACIONAL" />

        <CheckBox
                android:id="@+id/checkbox_projeto_redes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROJETO DE REDES" />

        <CheckBox
                android:id="@+id/checkbox_seguranca_plataformas_redes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEGURANÇA EM PLATAFORMAS E REDES DE COMPUTADORES" />

        <CheckBox
                android:id="@+id/checkbox_sistemas_digitais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SISTEMAS DIGITAIS" />

        <CheckBox
                android:id="@+id/checkbox_analise_complexidade_algoritmos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ANÁLISE E COMPLEXIDADE DE ALGORITMOS" />

    </LinearLayout>

    <Button
            android:id="@+id/btnProx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Próxima página"
            app:layout_constraintTop_toBottomOf="@+id/checkbox_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="80dp"/>
    <TextView
            android:id="@+id/error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/btnProx"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5" />
</android.support.constraint.ConstraintLayout>
